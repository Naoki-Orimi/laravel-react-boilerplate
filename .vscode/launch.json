{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "XDebug on docker",
            "type": "php",
            "request": "launch",
            "hostname": "0.0.0.0",
            "port": 9012,
            "pathMappings": {
                "/var/www/html": "${workspaceRoot}/htdocs"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "log": true,
            "console": "internalConsole"
        }
    ]
}
